<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    
    <!-- Suppress known false positives -->
    
    <!-- Spring Framework false positives -->
    <suppress>
        <notes>Spring Boot starter dependencies - false positive CVEs</notes>
        <gav regex="true">org\.springframework\.boot:spring-boot-starter.*:.*</gav>
        <cve>CVE-2018-1270</cve>
        <cve>CVE-2018-1271</cve>
    </suppress>
    
    <!-- H2 Database false positives for in-memory testing -->
    <suppress>
        <notes>H2 Database used only for testing with in-memory configuration</notes>
        <gav regex="true">com\.h2database:h2:.*</gav>
        <cve>CVE-2018-10054</cve>
        <cve>CVE-2019-10247</cve>
    </suppress>
    
    <!-- Jackson false positives -->
    <suppress>
        <notes>Jackson vulnerabilities not applicable due to controlled usage</notes>
        <gav regex="true">com\.fasterxml\.jackson\.core:jackson-databind:.*</gav>
        <cve>CVE-2019-12086</cve>
        <cve>CVE-2019-14540</cve>
    </suppress>
    
    <!-- Tomcat embedded false positives -->
    <suppress>
        <notes>Tomcat embedded used only in controlled test environment</notes>
        <gav regex="true">org\.apache\.tomcat\.embed:tomcat-embed.*:.*</gav>
        <cve>CVE-2019-0232</cve>
        <cve>CVE-2020-1938</cve>
    </suppress>
    
    <!-- JUnit false positives -->
    <suppress>
        <notes>JUnit testing framework - development dependency only</notes>
        <gav regex="true">org\.junit\.jupiter:junit-jupiter.*:.*</gav>
        <cve>CVE-2020-15250</cve>
    </suppress>
    
    <!-- Suppress file-based false positives -->
    <suppress>
        <notes>Lombok - compile-time only dependency</notes>
        <filePath regex="true">.*lombok.*\.jar</filePath>
    </suppress>
    
    <!-- Suppress CPE false positives -->
    <suppress>
        <notes>False positive CPE matches for common dependency names</notes>
        <cpe>cpe:/a:pivotal:spring_framework</cpe>
    </suppress>
    
    <!-- Development and test dependencies -->
    <suppress>
        <notes>Development dependencies not deployed to production</notes>
        <gav regex="true">.*:.*:.*</gav>
        <cve>CVE-2021-22060</cve>
    </suppress>

</suppressions>