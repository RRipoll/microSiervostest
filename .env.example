# Environment Configuration for TestJava Price Service
# Copy this file to .env and modify the values as needed

# Application Configuration
APP_NAME=testjava-priceservice
APP_VERSION=1.0.0
APP_PORT=8080
SPRING_PROFILES_ACTIVE=production

# Java Configuration
JAVA_OPTS=-Xmx512m -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=priceservice
DB_USERNAME=priceuser
# DB_PASSWORD should be in secrets/db_password.txt

# Redis Configuration  
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redispass

# Nginx Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Security Configuration
JWT_SECRET_KEY_FILE=/run/secrets/jwt_secret

# Monitoring Configuration
PROMETHEUS_ENABLED=true
METRICS_EXPORT_ENABLED=true
HEALTH_CHECKS_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs
LOG_PATTERN=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n

# Docker Configuration
BUILD_DATE=2025-09-12T14:30:00Z
VCS_REF=latest
VERSION=1.0.0

# Performance Configuration
HIKARI_MAXIMUM_POOL_SIZE=20
HIKARI_MINIMUM_IDLE=5
HIKARI_CONNECTION_TIMEOUT=30000
HIKARI_IDLE_TIMEOUT=600000

# Cache Configuration
SPRING_CACHE_TYPE=redis
CACHE_TTL_SECONDS=3600
CACHE_REDIS_TIME_TO_LIVE=3600

# API Configuration
API_RATE_LIMIT_ENABLED=true
API_MAX_REQUESTS_PER_MINUTE=1000
API_CORS_ENABLED=false
API_CORS_ALLOWED_ORIGINS=http://localhost:3000

# Actuator Configuration
MANAGEMENT_ENDPOINTS_ENABLED=true
MANAGEMENT_ENDPOINTS_WEB_BASE_PATH=/actuator
MANAGEMENT_HEALTH_SHOW_DETAILS=when_authorized

# Tracing Configuration
SPRING_ZIPKIN_BASE_URL=http://jaeger:9411
SPRING_SLEUTH_SAMPLER_PROBABILITY=0.1
TRACING_ENABLED=true

# Alert Configuration
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_TO=ops-team@company.com

# Environment Specific Settings
ENVIRONMENT=production
DEBUG_ENABLED=false
SWAGGER_ENABLED=false
H2_CONSOLE_ENABLED=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL Configuration (if using HTTPS)
SSL_ENABLED=false
SSL_KEY_STORE_PATH=/etc/ssl/certs/keystore.p12
SSL_KEY_STORE_PASSWORD=changeit
SSL_KEY_STORE_TYPE=PKCS12